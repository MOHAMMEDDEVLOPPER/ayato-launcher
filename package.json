{
  "name": "ayato-launcher",
  "version": "1.0.0",
  "description": "AYATO LAUNCHER - Modern Desktop Game Launcher",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node server/server.js",
    "build": "echo 'Skipping build for server deployment'",
    "build:portable": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win portable",
    "build:installer": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win nsis"
  },
  "build": {
    "appId": "com.ayato.launcher",
    "productName": "AYATO LAUNCHER",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "sign": null,
      "signingHashAlgorithms": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AYATO LAUNCHER"
    },
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/electron/**/*",
      "!dist/**/*",
      "!build/**/*",
      "!*.md",
      "!*.log"
    ],
    "extraResources": [
      {
        "from": "src/assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ]
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "framer-motion": "^10.16.0"
  },
  "author": "",
  "license": "MIT"
}
